<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/circular_shape_section"
        android:layout_width="839dp"
        android:layout_height="839dp"
        tools:ignore="ContentDescription"
        android:layout_marginTop="-630dp"
        android:background="@drawable/top_circular_portion" />

    <LinearLayout
        android:id="@+id/upper_section"
        android:layout_width="match_parent"
        android:layout_height="239dp"
        android:layout_marginTop="-210dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:id="@+id/total_amount_section"
            android:layout_width="308dp"
            android:layout_height="138dp"
            android:layout_marginTop="95dp"
            app:cardCornerRadius="11dp">

            <TextView
                android:id="@+id/total_amount_text"
                android:layout_width="95dp"
                android:layout_height="18dp"
                android:layout_marginStart="107dp"
                android:layout_marginTop="21dp"
                android:text="@string/total_amount" />

            <TextView
                android:id="@+id/rs_text"
                android:layout_width="30dp"
                android:layout_height="29dp"
                android:layout_marginStart="19dp"
                android:layout_marginTop="69dp"
                android:lineHeight="29.5sp"
                android:text="@string/rs"
                android:textColor="#6938EF"
                android:textFontWeight="700"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/amount_number"
                android:layout_width="225dp"
                android:layout_height="44dp"
                android:layout_marginStart="58dp"
                android:layout_marginTop="57dp"
                android:lineHeight="43.57dp"
                android:text="@string/amount"
                android:textAlignment="center"
                android:textColor="#0A2540"
                android:textFontWeight="500"
                android:textSize="36sp" />
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/nepal_pay_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        app:cardBackgroundColor="#FFFFFF">

        <androidx.cardview.widget.CardView
            android:id="@+id/payment_via_napal_pay"
            android:layout_width="308dp"
            android:layout_height="119dp"
            app:cardBackgroundColor="#F4F3FF"
            app:cardCornerRadius="7dp">

            <ImageView
                android:id="@+id/nepal_pay_logo"
                android:layout_width="142dp"
                android:layout_height="48dp"
                tools:ignore="ContentDescription"
                android:layout_marginStart="83dp"
                android:layout_marginTop="24dp"
                android:src="@drawable/nepal_pay" />

            <ImageView
                android:id="@+id/tap_to_make_instance_payment_text"
                android:layout_width="239dp"
                android:layout_height="38dp"
                tools:ignore="ContentDescription"
                android:layout_marginStart="35dp"
                android:layout_marginTop="76dp"
                android:padding="10dp"
                android:src="@drawable/tap_to_make_instance_payment"
                android:textColor="#0A2540" />

        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lower_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:id="@+id/show_qr_section"
            android:layout_width="150dp"
            android:layout_height="138dp"
            app:cardBackgroundColor="#F4F3FF"
            app:cardCornerRadius="7dp">

            <ImageView
                android:id="@+id/show_qr_logo"
                android:layout_width="68.17dp"
                android:layout_height="68.17dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:src="@drawable/show_qr"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/show_qr_text"
                android:layout_width="68.17dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="102dp"
                android:lineHeight="18.15dp"
                android:text="@string/show_qr"
                android:textAlignment="center"
                android:textColor="#0A2540"
                android:textFontWeight="500"
                android:textSize="15sp" />

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/scan_qr_section"
            android:layout_width="150dp"
            android:layout_height="138dp"
            android:layout_marginStart="8dp"
            app:cardBackgroundColor="#F4F3FF"
            app:cardCornerRadius="7dp">

            <ImageView
                android:id="@+id/scan_qr_logo"
                android:layout_width="68.17dp"
                android:layout_height="68.17dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:src="@drawable/scan_qr"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/scan_qr_text"
                android:layout_width="68.17dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="102dp"
                android:lineHeight="18.15dp"
                android:text="@string/scan_qr"
                android:textAlignment="center"
                android:textColor="#0A2540"
                android:textFontWeight="500"
                android:textSize="15sp" />

        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <ImageView
        android:id="@+id/imark_logo_section"
        android:layout_width="160dp"
        android:layout_height="22dp"
        android:layout_marginTop="38dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/powered_by_imark"
        tools:ignore="ContentDescription" />


</LinearLayout>